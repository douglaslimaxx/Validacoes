<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mateus.validacaodeformulario.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_nome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Nome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GÃªnero:"
        android:id="@+id/textView_genero"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/edt_nome" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/genero_masc"
        android:checked="false"
        android:layout_alignTop="@+id/textView_genero"
        android:layout_toEndOf="@+id/textView_genero"
        android:layout_marginStart="37dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/genero_fem"
        android:layout_marginStart="96dp"
        android:checked="false"
        android:layout_alignTop="@+id/genero_masc"
        android:layout_toEndOf="@+id/genero_masc" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_Cpf"
        android:layout_below="@+id/genero_masc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:hint="CPF" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_email"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:hint="Email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/bt_Ok"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edt_idade"
        android:layout_above="@+id/genero_masc"
        android:layout_alignParentStart="true"
        android:hint="Idade" />

</RelativeLayout>
